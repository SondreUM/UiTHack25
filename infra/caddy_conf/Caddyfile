uithack-2.td.org.uit.no {
	import common

	log {
		output file /var/log/caddy/uithack-2.td.org.uit.no.log {
			roll_size 20MiB
			roll_keep 5
			roll_keep_for 1d
		}
		format json
		level INFO
	}

	handle_path /hope-nobody-guesses-this/* {
		reverse_proxy http://dinosaur_tech:3000
	}
	@resources {
		path *.css *.js *.woff2 favicon.ico
	}
	handle @resources {
		reverse_proxy http://dinosaur_tech:3000
	}
}
