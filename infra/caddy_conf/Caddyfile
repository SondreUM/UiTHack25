{
	email jkr070@uit.no
	key_type rsa4096
	metrics
	admin :2019

	log {
		output file /var/log/caddy/caddy_main.log {
			roll_size 100MiB
			roll_keep 5
			roll_keep_for 100d
		}
		format json
		level INFO
	}
}

(common) {
	tls {
		protocols tls1.3
		curves x25519
	}

	request_body {
		max_size 2MB
	}

	header {
		Strict-Transport-Security "max-age=63072000; includeSubDomains"
		-server
	}

	encode zstd gzip
}

uithack-2.td.org.uit.no:3000 {
	import common

	log {
		output file /var/log/caddy/grafana.log {
			roll_size 20MiB
			roll_keep 5
			roll_keep_for 1d
		}
		format json
		level INFO
	}

	reverse_proxy http://grafana:3000
}

http://uithack-2.td.org.uit.no:5005 {
	log {
		output file /var/log/caddy/evasive_verify.log {
			roll_size 20MiB
			roll_keep 5
			roll_keep_for 1d
		}
		format json
		level INFO
	}
	@forbiddenPath path_regexp flag.*
	respond @forbiddenPath "You think you can just waltz in here and grab the flag? Think again.\n" 403

	@correct_path {
		path /c2850b16-2c58-b061-c285-0b162c58b061
	}

	@correct_path_and_agent {
		path /c2850b16-2c58-b061-c285-0b162c58b061
		header User-Agent "hackerman/1.0"
	}

	respond @correct_path 403

	handle @correct_path_and_agent {
		respond 200 {
			body "UiTHack25{S3cur1ty_Thr0ugh_0bscur1tee}"
		}
	}

	respond 404
}

